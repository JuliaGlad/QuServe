<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.profile.profileSettings.SettingsFragment">

    <ImageButton
        android:id="@+id/imageButton_back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/iconColor" />

    <ImageView
        android:id="@+id/profile_photo_settings"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_account_circle"
        app:layout_constraintStart_toEndOf="@+id/imageButton_back2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/bold_roboto"
        android:text="@string/user_name"
        android:textColor="@color/strokeColor"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/profile_photo_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/email"
        android:textColor="@color/textHelperColor"
        app:layout_constraintStart_toEndOf="@+id/profile_photo_settings"
        app:layout_constraintTop_toBottomOf="@+id/user_name_settings" />

