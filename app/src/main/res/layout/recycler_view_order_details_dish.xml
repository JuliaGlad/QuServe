<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android
    ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16sp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/dialog_background">

    <ImageView
        android:id="@+id/dish_image"
        android:layout_height="130dp"
        android:layout_marginBottom="24dp"
        android:layout_width="140dp"
        android:src="@drawable/add_photo_rectangle_land_scape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TextAppearance.Material3.TitleLarge.QuServe"
        android:id="@+id/dish_name"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/dish_image"
        app:layout_constraintTop_toBottomOf="@+id/weight_count" />

    <TextView
        style="@style/TextAppearance.Material3.TitleLarge.QuServe.Regular"
        android:id="@+id/weight_count"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:text="100g"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dish_image"
        app:layout_constraintTop_toTopOf="@+id/dish_image" />

    <TextView
        android:id="@+id/price"
        style="@style/TextAppearance.Material3.HeadlineMedium.QuServe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="444 â‚½"
        app:layout_constraintStart_toEndOf="@+id/price_title"
        app:layout_constraintTop_toTopOf="@+id/price_title" />

    <TextView
        android:id="@+id/price_title"
        style="@style/TextAppearance.Material3.HeadlineMedium.QuServe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/price"
        app:layout_constraintStart_toStartOf="@+id/dish_image"
        app:layout_constraintTop_toBottomOf="@+id/number_of_dish_title2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dish_image"
        app:layout_constraintTop_toBottomOf="@+id/dish_name" />

    <ImageView
        android:id="@+id/add_item_icon"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_toppings"
        app:layout_constraintStart_toEndOf="@+id/dish_image"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view"
        app:srcCompat="@drawable/ic_add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_toppings"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view" />

    <ImageView
        android:id="@+id/remove_item_icon"
        android:layout_height="16dp"
        android:layout_width="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_to_remove"
        app:layout_constraintStart_toStartOf="@+id/dish_name"
        app:layout_constraintTop_toTopOf="@+id/recycler_view_to_remove"
        app:srcCompat="@drawable/baseline_remove_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_to_remove"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/remove_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_toppings" />

    <TextView
        android:id="@+id/dish_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/number_of_dish"
        android:textColor="?colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/number_of_dish_title2"
        app:layout_constraintStart_toEndOf="@+id/number_of_dish_title2"
        app:layout_constraintTop_toTopOf="@+id/number_of_dish_title2" />

    <TextView
        android:id="@+id/number_of_dish_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/number_of_dish"
        android:textColor="?colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/remove_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_to_remove" />

</androidx.constraintlayout.widget.ConstraintLayout>
