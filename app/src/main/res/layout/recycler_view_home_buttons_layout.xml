<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/first_button"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryContainer"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp">

            <TextView
                android:id="@+id/first_button_title"
                style="@style/TextAppearance.Material3.BodyMedium.Bold.QuServe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/join_queue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/first_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_icon_primary_container_background"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/qr_code"
                app:tint="?colorPrimary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/second_button"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="20dp"
        android:layout_weight="1"
        app:cardElevation="0dp"
         app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryContainer"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp">

            <TextView
                android:id="@+id/second_button_title"
                style="@style/TextAppearance.Material3.BodyMedium.Bold.QuServe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/join_queue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/second_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_icon_primary_container_background"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/qr_code"
                app:tint="?colorPrimary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>